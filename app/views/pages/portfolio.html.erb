<div class="flx-container">
  <div class="text-center my-5 mt-5">
    <div class="translate">
      <h1 class="home-title">PORTFOLIO</h1>
      <div id="arrow-box" class="arrow-box">
        <%= image_tag 'arrow.svg', alt: "Graphic of directional arrow box.", aria_label: "Click to see the portfolio."%>
      </div>
    </div>
  </div>
</div>
<hr/>
<div class="container-page">
<div id="portfolio-examples" class="portfolio-examples">
  <% @examples.each do |ad| %>
  <div class="project-section">

    <div class="<%= @examples.index(ad) % 2 === 0 ? "example-row-reverse" : "example-row" %> project-example"> 
    <div class= "image-container <%= @examples.index(ad) % 2 === 0 ? "flex-end" : "flex-start"%>">
      <% if ad[:link] %>
        <%= link_to ad[:link], alt: ad[:alt], rel: 'noopener', target: '_blank', aria_label: ad[:label] do %>
          <%= image_tag ad[:image_link], class: "project-image", alt: ad[:alt] %>
        <% end %>
        <% else %>
          <%= image_tag ad[:image_link], class: "project-image modal-image-check", data: {image_link: ad[:image_link]}, alt: ad[:alt] %>
      <% end %>
    </div>
    <div class="description-container">
      <h2 class="description-subheading">Brief</h2>
      <p><%= sanitize ad[:brief] %></p>
      <h2 class="description-subheading">Description</h2>
      <% if ad[:description].include? "\n\n" %>
        <% ad[:description].split("\n\n").each do |line| %>
          <p><%= sanitize line %></p>
        <% end %>
      <% else %>
        <p><%= sanitize ad[:description] %></p>
      <% end %>
    </div>
    </div>
  </div>
  <hr>
  <% end %>
</div>
